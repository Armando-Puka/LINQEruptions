@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="mt-5">LINQ Eruptions</h1>

    <h2 class="mt-5">Stratovolcano Eruptions</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Location</th>
                <th>Elevation</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eruption in ViewBag.StratovolcanoEruptions)
            {
                <tr>
                    <td>@eruption.Volcano</td>
                    <td>@eruption.Year</td>
                    <td>@eruption.Location</td>
                    <td>@eruption.ElevationInMeters</td>
                    <td>@eruption.Type</td>
                </tr>
            }
        </tbody>
    </table>

