                <th>Location</th>
                <th>Elevation</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.FirstChileEruption != null)
            {
                <tr>
                    <td>@ViewBag.FirstChileEruption.Volcano</td>
                    <td>@ViewBag.FirstChileEruption.Year</td>
                    <td>@ViewBag.FirstChileEruption.Location</td>
                    <td>@ViewBag.FirstChileEruption.ElevationInMeters</td>
                    <td>@ViewBag.FirstChileEruption.Type</td>
                </tr>
            }
            else
            {
                <tr>
